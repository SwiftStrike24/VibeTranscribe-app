# VibeTranscribe Environment Variables

# OpenAI API Configuration
# Replace with your actual API key from https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=your-openai-api-key
MAIN_VITE_OPENAI_API_KEY=your-openai-api-key
PRELOAD_VITE_OPENAI_API_KEY=your-openai-api-key

# OpenAI API Base URL (defaults to https://api.openai.com/v1)
VITE_OPENAI_API_BASE_URL=https://api.openai.com/v1
MAIN_VITE_OPENAI_API_BASE_URL=https://api.openai.com/v1
PRELOAD_VITE_OPENAI_API_BASE_URL=https://api.openai.com/v1

# OpenAI API Timeout in milliseconds (defaults to 30000)
VITE_OPENAI_API_TIMEOUT=30000
MAIN_VITE_OPENAI_API_TIMEOUT=30000
PRELOAD_VITE_OPENAI_API_TIMEOUT=30000

# Whisper Model (defaults to 'whisper-1')
VITE_OPENAI_WHISPER_MODEL=whisper-1
MAIN_VITE_OPENAI_WHISPER_MODEL=whisper-1
PRELOAD_VITE_OPENAI_WHISPER_MODEL=whisper-1
